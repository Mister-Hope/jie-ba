{
  "name": "nodejieba",
  "version": "3.0.0",
  "description": "chinese word segmentation for node",
  "keywords": [
    "chinese",
    "segment",
    "cppjieba",
    "jieba",
    "中文分词",
    "结巴分词"
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/yanyiwu/nodejieba.git"
  },
  "license": "MIT",
  "author": "Yanyi Wu <i@yanyiwu.com>",
  "maintainers": [
    "Yanyi Wu <i@yanyiwu.com>",
    "Mister-Hope <mister-hope@outlook.com>"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "files": [
    "deps",
    "dist",
    "dict",
    "lib",
    "binding.gyp"
  ],
  "binary": {
    "module_name": "nodejieba",
    "module_path": "./build/Release/",
    "remote_path": "v{version}",
    "package_name": "{module_name}-v{version}-{node_abi}-{platform}-{arch}.tar.gz",
    "host": "https://github.com/yanyiwu/nodejieba/releases/download/"
  },
  "scripts": {
    "binary:build": "node-gyp configure && node-pre-gyp build",
    "binary:pack": "node-pre-gyp package",
    "binary:rebuild": "node-pre-gyp rebuild",
    "binary:release": "node-pre-gyp-github publish --release",
    "build": "rollup -c rollup.config.ts --configPlugin esbuild",
    "clean": "rimraf build/ dist/",
    "install": "node-pre-gyp install --fallback-to-build",
    "prepublishOnly": "pnpm clean && pnpm build",
    "test": "vitest",
    "test:benchmark": "vitest bench",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@mapbox/node-pre-gyp": "^1.0.11",
    "node-addon-api": "^7.0.0",
    "node-gyp": "^10.0.1"
  },
  "devDependencies": {
    "@types/node": "20.10.4",
    "@vitest/coverage-v8": "1.0.4",
    "esbuild": "0.19.9",
    "node-pre-gyp-github": "1.4.4",
    "rimraf": "5.0.5",
    "rollup": "4.9.0",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.0",
    "typescript": "5.3.3",
    "vitest": "1.0.4"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": "^18.0.0 || ^20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
